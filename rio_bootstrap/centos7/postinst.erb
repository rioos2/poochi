mv <%= @basic[:home]+"/"+@package[:package] %>/rioos-bootstrap.d /etc/
mv <%= @basic[:home]+"/"+@package[:package] %>/rioosbootstrapd.erb /usr/sbin/rioosbootstrapd

# Debian based distros
if [ -d /etc/network ]; then
    # Register Service
    update-rc.d rioosbootstrap defaults 9 99

    # Prepare network files
    cp /etc/network/interfaces /etc/network/interfaces.$(date "+%s")
    cat > /etc/network/interfaces <<EOT
# The loopback network interface
auto lo
iface lo inet loopback
EOT
    rm -rf /etc/network/interfaces.d
fi

# RedHat based distros
if [ -d /etc/sysconfig/network-scripts ]; then
    # Register Service
    chkconfig --add rioosbootstrap

    # Prepare network files
    rm -f /etc/sysconfig/network-scripts/ifcfg-eth*
fi
