#!/bin/sh
# postrm script for Rio/OS Bootstrap

set -e

if [ -d "/etc/rioos-bootstrap.d" ]; then
  rm -r /etc/rioos-bootstrap.d
fi

case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    update-rc.d rioosbootstrap remove > /dev/null
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

exit 0
