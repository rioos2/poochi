#!/bin/sh

set -e

MEGAM_HOME=<%= @basic[:home] %>
MEGAM_LIBHOME=<%= @basic[:libhome] %>

if [ "$1" = "purge" ]; then
    dpkg-statoverride --remove $MEGAM_HOME || true
    dpkg-statoverride --remove $MEGAM_LIBHOME || true

    rm -rf $MEGAM_LIBHOME 2>/dev/null || true
    rm -rf $MEGAM_HOME 2>/dev/null || true
    rm -rf  <%= @basic[:runhome] %>
    rm -rf  <%= @basic[:loghome] %>
fi
