#!/bin/sh

mkdir -p .<%= @basic[:home] %>

fpm -s dir -t rpm -f  --iteration <%= @basic[:iteration] %> -v <%= @basic[:version] %> \
-n <%= @package[:package] %> \
--after-install ./postinst  \
--after-remove ./postrm  \
--license "<%= @basic[:license] %>" --vendor "<%= @basic[:vendor] %>" --category "<%= @package[:category] %>" \
--maintainer "<%= @basic[:maintainer] %>" --url "<%= @basic[:url] %>" --description "<%= @package[:description] %>"  .<%=  @basic[:home] %>
