#!/bin/bash

cd <%= @package[:package]+"/src/"+@package[:git_org]+"/beedi" %>

# sometimes  the dependencies aren't getting pulled. Adding a master solved the problem.
git remote add master https://gitlab.com/rajesh_rajagopal/beedi.git
# make test
make controller
make scheduler

cat > VERSION << EOF
git_version=`git rev-parse HEAD`
git_branch=`git branch`
EOF

cd ../../../../..

pwd

cp ../../../entrypoint.sh .

sudo docker build -t rio-scheduler -f Dockerfile .

sudo docker tag rio-scheduler <%= @basic[:registry_url]+"/rioosscheduler:"+@basic[:version] %>

sudo docker push <%= @basic[:registry_url]+"/rioosscheduler:"+@basic[:version] %>
