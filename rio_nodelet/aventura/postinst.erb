#!/bin/bash

mkdir -p <%= @basic[:libhome] %>/nodelet
mkdir -p <%= @basic[:libhome] %>/context

cd <%= @basic[:libhome] %>/context
wget -O init.sh <%= @package[:tar] %>
cp <%= @basic[:home]+"/"+@package[:package] %>/VERSION .
mv <%= @basic[:home]+"/"+@package[:package] %>/kr .
mv <%= @basic[:home]+"/"+@package[:package] %>/krd .
mv <%= @basic[:home]+"/"+@package[:package] %>/krssh .
mv <%= @basic[:home]+"/"+@package[:package] %>/kr-pkscs11.so .
mv <%= @basic[:home]+"/"+@package[:package]+"/bin" %>/rioos-gulpd gulpd

systemctl enable <%= @package[:systemd_service] %>
systemctl start <%= @package[:systemd_service] %>
